{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",

    "typeRoots": ["./node_modules/@types", "src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"],
  "files": ["./src/types/globals.d.ts"]
}
